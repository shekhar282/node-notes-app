<%- include('partials/header'); -%>

<body>
    <nav>
        <nav>
            <div class="nav-wrapper">
                <a href="/notes" class="brand-logo center">Notes</a>
                <ul id="nav-mobile" class="right hide-on-med-and-down">
                    <li><a class="red darken-4 waves-effect waves-light btn" href="/user/logout">Logout</a></li>
                </ul>
            </div>
        </nav>
    </nav>
    <main>
        <div class="input-field col s6 center">
            <a href="/notes/addnote" class="waves-effect waves-light btn">Add Note</a>
        </div>
        <div class="row">
            <% if (notes) { %>

            <% notes.forEach((note)=>{%>

            <!-- <div class="row"> -->
            <div class="col s12 m3" id="<%= note.id%>">
                <div class="card blue-grey darken-1">
                    <div class="card-content">
                        <span class="card-title">
                            <h3 class="note_title"><%= note.title%></h3>
                        </span>
                        <p class="note_body"><%= note.body%></p>
                    </div>

                    <div class="card-action">
                        <a class="waves-effect waves-light btn modal-trigger"
                            href="/notes/updatenote/<%= note.id%>">Update</a>
                        <a href="/notes/delete/<%= note.id%>"
                            class="waves-effect waves-light btn red darken-3">Delete</a>
                    </div>
                </div>
            </div>


            <%});%>
            <% } %>
        </div>


    </main>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"
        integrity="sha512-bLT0Qm9VnAYZDflyKcBaQ2gg0hSYNQrJ8RilYldYQ1FxQYoCLtUjuuRuZo+fjqhx/qtq/1itJ0C2ejDxltZVFg=="
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <script>

    </script>
